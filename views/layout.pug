doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet" ,integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    script()
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" ,integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
  body
    nav(class="navbar navbar-expand-lg bg-body-tertiary")
      div(class="container fluid")
        a(class="navbar-brand text-start fw-bolder fs-2" href="/") OnlyMembers
        ul(class="nav justify-content-end")
          if user
            div(class="d-flex align-items-center justify-content-center") 
              div Welcome Back, #{user.firstName} #{user.lastName} (#{user.username})
              div(class="d-flex flex-column justify-content-center align-items-center mx-3")
                if user.isMember
                  span(class="fs-6 fw-bold text-warning") Member
                if user.isAdmin
                  span(class="fs-6 fw-bolder text-warning") Admin

            if !user.isMember
              li(class="nav-item")
                a(class="nav-link" href="/join-the-club") Join Club
            if !user.isAdmin
              li(class="nav-item")
                a(class="nav-link" href="/upgrade-to-admin") Upgrade to Admin
            li(class="nav-item")
              a(class="nav-link" href="/sign-out") Sign Out

          else
            li(class="nav-item")
              a(class="nav-link" href="/sign-up") Sign Up
            li(class="nav-item")
              a(class="nav-link" href="/sign-in") Sign in

    block content
