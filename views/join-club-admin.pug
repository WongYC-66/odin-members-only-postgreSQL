extends layout

block content
  h1= title
  p Please enter upgrade code to be Admin : admin123456
  form(action="/upgrade-to-admin", method="post") 
    div(class="form-floating mb-3")
      input(type="text", class="form-control", id="upgradeCode", name="upgradeCode" required)
      label(for="upgradeCode") Upgrade Code

    button(type="submit" class="btn btn-danger") Upgrade
  
  if errors
    ul(class="text-danger m-2")
      for error in errors 
        li!= error.msg
